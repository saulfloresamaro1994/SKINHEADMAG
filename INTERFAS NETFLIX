<body>
    <div class="container">
        <!-- Encabezado con botones -->
        <header>
            <h1> SERVIDOR SKINHEAD </h1>
            <nav>
                <button id="moviesBtn">Películas</button>
                <button id="seriesBtn">Series</button>
                <button id="tvBtn">TV</button>
            </nav>
        </header>

        <!-- Contenido dinámico -->
        <main>
            <div id="content">
                <!-- Aquí se cargará el contenido dinámico -->
            </div>
        </main>
    </div>

    <!-- Reproductor de video -->
    <div id="overlay"></div>
    <div id="videoPlayer">
        <video controls id="video">
            Tu navegador no soporta la reproducción de video.
        </video>
        <button id="closePlayer">Cerrar</button>
    </div>

    <script>
        // Lógica en JavaScript
        const content = document.getElementById('content');
        const videoPlayer = document.getElementById('videoPlayer');
        const overlay = document.getElementById('overlay');
        const videoElement = document.getElementById('video');
        const closePlayerBtn = document.getElementById('closePlayer');

        const apiKey = 'e22418df765186e2208cf44bef9e3bd2'; // API Key de TMDB
        const baseUrl = 'https://api.themoviedb.org/3';
        const imageBaseUrl = 'https://image.tmdb.org/t/p/w500';

        // Cargar contenido según el tipo
        document.getElementById('moviesBtn').addEventListener('click', () => loadContent('movie'));
        document.getElementById('seriesBtn').addEventListener('click', () => loadContent('tv'));

        async function loadContent(type) {
            content.innerHTML = ''; // Limpiar contenido anterior

            // Obtener datos de la API de TMDB
            const response = await fetch(`${baseUrl}/discover/${type}?api_key=${apiKey}&language=es-ES`);
            const data = await response.json();

            // Crear elementos de contenido dinámicamente
            data.results.forEach(item => {
                const itemElement = document.createElement('div');
                itemElement.classList.add('content-item');

                // Obtener el enlace de reproducción (puedes personalizar esta lógica)
                const videoLink = getVideoLink(item.id, type);

                itemElement.innerHTML = `
                    <img src="${imageBaseUrl}${item.poster_path}" alt="${item.title || item.name}">
                    <h3>${item.title || item.name}</h3>
                    <button onclick="playVideo('${videoLink}')">Reproducir</button>
                `;
                content.appendChild(itemElement);
            });
        }

        // Función para obtener el enlace de video (puedes personalizarla)
        function getVideoLink(id, type) {
            // Mapeo de enlaces de video (puedes reemplazar esto con una API o base de datos)
            const videoLinks = {
                movie: {
                    1104845: 'https://www.example.com/videos/plankton.mp4', // Ejemplo para "Plankton, la película"
                    1234567: 'https://www.example.com/videos/movie2.mp4', // Ejemplo para otra película
                },
                tv: {
                    987654: 'https://www.example.com/videos/serie1.mp4', // Ejemplo para una serie
                    567890: 'https://www.example.com/videos/serie2.mp4', // Ejemplo para otra serie
                }
            };

            // Retorna el enlace correspondiente al ID y tipo (movie/tv)
            return videoLinks[type][id] || 'https://www.example.com/default-video.mp4'; // Enlace por defecto si no se encuentra
        }

        // Reproducir video
        function playVideo(link) {
            videoElement.src = link;
            videoPlayer.style.display = 'block';
            overlay.style.display = 'block';
            videoElement.play();
        }

        // Cerrar reproductor
        closePlayerBtn.addEventListener('click', () => {
            videoPlayer.style.display = 'none';
            overlay.style.display = 'none';
            videoElement.pause();
            videoElement.src = '';
        });

        // Cargar contenido inicial (películas por defecto)
        loadContent('movie');
    </script>
</body>

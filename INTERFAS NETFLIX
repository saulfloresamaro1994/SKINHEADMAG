            ],
            series: [
                { title: 'Serie 1', image: 'https://via.placeholder.com/200x300?text=Serie+1', link: 'https://www.example.com/serie1.mp4' },
                { title: 'Serie 2', image: 'https://via.placeholder.com/200x300?text=Serie+2', link: 'https://www.example.com/serie2.mkv' },
                { title: 'Serie 3', image: 'https://via.placeholder.com/200x300?text=Serie+3', link: 'https://www.example.com/serie3.m3u8' }
                { title: 'Serie 1', image: 'https://via.placeholder.com/200x300?text=Serie+1', link: 'https://www.example.com/serie1.mp4' },
                { title: 'Serie 2', image: 'https://via.placeholder.com/200x300?text=Serie+2', link: 'https://www.example.com/serie2.mkv' },
                { title: 'Serie 3', image: 'https://via.placeholder.com/200x300?text=Serie+3', link: 'https://www.example.com/serie3.m3u8' }
                { title: 'Serie 1', image: 'https://via.placeholder.com/200x300?text=Serie+1', link: 'https://www.example.com/serie1.mp4' },
                { title: 'Serie 2', image: 'https://via.placeholder.com/200x300?text=Serie+2', link: 'https://www.example.com/serie2.mkv' },

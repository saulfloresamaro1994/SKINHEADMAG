        nav button {
            background-color: #e50914;
            color: white;
            border: none;
            padding: 10px 20px;
            margin: 0 10px;
            cursor: pointer;
            font-size: 16px;
        }

        nav button:hover {
            background-color: #f40612;
        }

        #content {
            display: flex;
            flex-wrap: wrap;
            gap: 10px;
            margin-top: 20px;
        }

        .content-item {
            width: 200px;
            background-color: #333;
            border-radius: 10px;
            overflow: hidden;
            position: relative;
            text-align: center;
            padding: 10px;
        }

        .content-item img {
            width: 100%;

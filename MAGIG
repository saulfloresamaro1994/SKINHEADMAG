    <script>
        // Inicializar el reproductor
        const player = videojs('mediaPlayer', {
            controls: true,
            autoplay: false,
            preload: 'auto',
        });

        // Función para reproducir contenido en el reproductor
        function playMedia(src, type) {
            player.src({ src, type });
            player.play();
        }
